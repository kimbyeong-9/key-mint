function Login() {
  const navigate = useNavigate();
  const { setUser } = useUser();
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');
  const [isLoading, setIsLoading] = useState(false);
  const [error, setError] = useState('');

  // ì»´í¬ë„ŒíŠ¸ ë§ˆìš´íŠ¸ ì‹œ í•„ë“œ ì´ˆê¸°í™”
  useEffect(() => {
    setEmail('');
    setPassword('');
    
    // DOMì´ ë Œë”ë§ëœ í›„ í•„ë“œ ê°’ ê°•ì œ ì´ˆê¸°í™”
    const timer = setTimeout(() => {
      const emailInput = document.getElementById('email');
      const passwordInput = document.getElementById('password');
      
      if (emailInput) {
        emailInput.value = '';
        emailInput.setAttribute('autocomplete', 'new-email');
      }
      if (passwordInput) {
        passwordInput.value = '';
        passwordInput.setAttribute('autocomplete', 'new-password');
      }
    }, 100);

    return () => clearTimeout(timer);
  }, []);

  const handleSubmit = async (e) => {
    e.preventDefault();
    setIsLoading(true);
    setError('');

    try {
      console.log('ğŸ” ë¡œê·¸ì¸ ì‹œë„:', { email });

      // Supabase Authë¥¼ ì‚¬ìš©í•œ ë¡œê·¸ì¸
      const authResult = await signInWithEmail(email, password);
      
      if (authResult.user) {
        console.log('âœ… Auth ë¡œê·¸ì¸ ì„±ê³µ:', authResult.user);

        // ì‚¬ìš©ì ì •ë³´ë¥¼ UserContextì— ì„¤ì •
        const userData = {
          id: authResult.user.id,
          email: authResult.user.email,
          username: authResult.user.user_metadata?.username || authResult.user.user_metadata?.display_name || 'Unknown',
          display_name: authResult.user.user_metadata?.display_name || authResult.user.user_metadata?.username || authResult.user.user_metadata?.full_name || 'Unknown',
          address: authResult.user.user_metadata?.address || null,
          wallet_address: authResult.user.user_metadata?.wallet_address || null,
          is_web3_user: authResult.user.user_metadata?.is_web3_user || false,
          created_at: authResult.user.created_at,
        };

        // UserContextì˜ setUser í•¨ìˆ˜ í˜¸ì¶œ
        setUser(userData);

        alert(`ë¡œê·¸ì¸ ì„±ê³µ! í™˜ì˜í•©ë‹ˆë‹¤, ${userData.display_name}ë‹˜!`);
        navigate('/');
      } else {
        alert('ë¡œê·¸ì¸ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤. ì´ë©”ì¼ê³¼ ë¹„ë°€ë²ˆí˜¸ë¥¼ í™•ì¸í•´ì£¼ì„¸ìš”.');
      }
    } catch (error) {
      console.error('âŒ ë¡œê·¸ì¸ ì˜¤ë¥˜:', error);
      
      // MCP ë¡œê·¸ì¸ ì˜¤ë¥˜ ë©”ì‹œì§€ ì²˜ë¦¬
      let errorMessage = 'ë¡œê·¸ì¸ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.';
      
      if (error.message.includes('ì‚¬ìš©ìë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤') || error.message.includes('ì´ë©”ì¼ ë˜ëŠ” ë¹„ë°€ë²ˆí˜¸ê°€ ì˜¬ë°”ë¥´ì§€ ì•ŠìŠµë‹ˆë‹¤')) {
        errorMessage = 'ì´ë©”ì¼ ë˜ëŠ” ë¹„ë°€ë²ˆí˜¸ê°€ ì˜¬ë°”ë¥´ì§€ ì•ŠìŠµë‹ˆë‹¤.';
      } else if (error.message.includes('ë¹„ë°€ë²ˆí˜¸ê°€ ì„¤ì •ë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤')) {
        errorMessage = 'ê³„ì •ì— ë¬¸ì œê°€ ìˆìŠµë‹ˆë‹¤. ê´€ë¦¬ìì—ê²Œ ë¬¸ì˜í•´ì£¼ì„¸ìš”.';
      } else if (error.message.includes('ë¹„ë°€ë²ˆí˜¸ ë¶ˆì¼ì¹˜')) {
        errorMessage = 'ë¹„ë°€ë²ˆí˜¸ê°€ ì˜¬ë°”ë¥´ì§€ ì•ŠìŠµë‹ˆë‹¤.';
      } else {
        errorMessage = `ë¡œê·¸ì¸ ì˜¤ë¥˜: ${error.message}`;
      }
      
      setError(errorMessage);
    } finally {
      setIsLoading(false);
    }
  };


  return (
    <Container>
      <LoginBox>
        <Title>ë¡œê·¸ì¸</Title>
        <Subtitle>Key Mintì— ì˜¤ì‹  ê²ƒì„ í™˜ì˜í•©ë‹ˆë‹¤</Subtitle>

        <Form 
          onSubmit={handleSubmit} 
          autoComplete="off"
          data-lpignore="true"
          data-1p-ignore="true"
        >
          {/* ë”ë¯¸ í•„ë“œë¡œ ìë™ì™„ì„± í˜¼ë€ì‹œí‚¤ê¸° */}
          <div style={{ display: 'none' }}>
            <input type="text" name="fake-username" autoComplete="username" />
            <input type="password" name="fake-password" autoComplete="current-password" />
          </div>
          
          <InputGroup
            label="ì´ë©”ì¼"
            htmlFor="email"
          >
            <TextInput
              type="email"
              id="email"
              name="login-email"
              placeholder="ì´ë©”ì¼ì„ ì…ë ¥í•˜ì„¸ìš”"
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              autoComplete="new-email"
              autoCorrect="off"
              autoCapitalize="off"
              spellCheck="false"
              data-form-type="other"
              data-lpignore="true"
              data-1p-ignore="true"
              required
            />
          </InputGroup>

          <InputGroup
            label="ë¹„ë°€ë²ˆí˜¸"
            htmlFor="password"
          >
            <PasswordInput
              id="password"
              name="password"
              placeholder="ë¹„ë°€ë²ˆí˜¸ë¥¼ ì…ë ¥í•˜ì„¸ìš”"
              value={password}
              onChange={(e) => setPassword(e.target.value)}
              required
            />
          </InputGroup>

          <Button type="submit" disabled={isLoading}>
            {isLoading ? 'ë¡œê·¸ì¸ ì¤‘...' : 'ë¡œê·¸ì¸'}
          </Button>

          {error && (
            <div style={{ 
              color: '#ef4444', 
              fontSize: '14px', 
              textAlign: 'center', 
              marginTop: '10px',
              padding: '8px',
              backgroundColor: '#fef2f2',
              border: '1px solid #fecaca',
              borderRadius: '6px'
            }}>
              {error}
            </div>
          )}

          <LinkGroup>
            <StyledLink to="#">ì•„ì´ë”” ì°¾ê¸°</StyledLink>
            <StyledLink to="#">ë¹„ë°€ë²ˆí˜¸ ì°¾ê¸°</StyledLink>
          </LinkGroup>
        </Form>


        <SignupLink>
          ê³„ì •ì´ ì—†ìœ¼ì‹ ê°€ìš”?
          <Link to="/signup">íšŒì›ê°€ì…</Link>
        </SignupLink>
      </LoginBox>
    </Container>
  );
}

export default Login;
